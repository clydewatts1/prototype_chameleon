# Chameleon MCP Server Configuration
#
# This is a sample configuration file. Copy this to ~/.chameleon/config/config.yaml
# and customize it for your needs.

server:
  # Transport type: "stdio" or "sse"
  transport: "stdio"
  
  # Host and port for SSE transport (ignored for stdio)
  host: "0.0.0.0"
  port: 8000
  
  # Logging level: DEBUG, INFO, WARNING, ERROR, or CRITICAL
  log_level: "INFO"
  
  # Directory path for log files (default: "logs")
  # Can be absolute or relative to the current working directory
  logs_dir: "logs"

# DEPRECATED: Single database configuration (kept for backward compatibility)
# Use metadata_database and data_database instead for dual-engine architecture
# database:
#   url: "sqlite:///chameleon.db"
#   schema: null

# Metadata Database (system tables: tools, logs, resources, prompts, code vault)
metadata_database:
  # Database connection URL for system metadata
  # Choose one of the following connection strings based on your database:
  
  # SQLite (default, no additional drivers required)
  url: "sqlite:///chameleon_meta.db"
  # For absolute path:
  # url: "sqlite:////absolute/path/to/chameleon_meta.db"
  
  # PostgreSQL (requires psycopg2-binary)
  # url: "postgresql://username:password@localhost:5432/chameleon_meta"
  # With schema:
  # url: "postgresql://username:password@localhost:5432/chameleon_meta"
  # schema: "chameleon"
  
  # MySQL (requires pymysql)
  # url: "mysql+pymysql://username:password@localhost:3306/chameleon_meta"
  # With custom charset:
  # url: "mysql+pymysql://username:password@localhost:3306/chameleon_meta?charset=utf8mb4"
  
  # Neo4j (requires neo4j driver - Note: Neo4j is not fully supported for metadata)
  # Neo4j is a graph database and requires special handling
  # For metadata storage, we recommend using a relational database
  # url: "bolt://username:password@localhost:7687"
  
  # Optional database schema prefix (default: None)
  # Used for enterprise databases where tables must be in a specific schema
  # Example: "retail_data" or "chameleon_schema"
  # Leave commented out for SQLite and MySQL (which don't support schemas the same way)
  # schema: "my_app_schema"

# Data Database (business data: sales, inventory, etc.)
data_database:
  # Database connection URL for business/application data
  # Choose one of the following connection strings based on your database:
  
  # SQLite (default, no additional drivers required)
  url: "sqlite:///chameleon_data.db"
  # For absolute path:
  # url: "sqlite:////absolute/path/to/chameleon_data.db"
  
  # PostgreSQL (requires psycopg2-binary)
  # url: "postgresql://username:password@localhost:5432/chameleon_data"
  # With schema:
  # url: "postgresql://username:password@localhost:5432/chameleon_data"
  # schema: "business_data"
  
  # MySQL (requires pymysql)
  # url: "mysql+pymysql://username:password@localhost:3306/chameleon_data"
  # With custom charset and timezone:
  # url: "mysql+pymysql://username:password@localhost:3306/chameleon_data?charset=utf8mb4&time_zone=%2B00:00"
  
  # Neo4j (requires neo4j driver)
  # Neo4j can be used for graph-based data analysis
  # Note: This is experimental and requires custom query handling
  # url: "bolt://username:password@localhost:7687"
  # For secure connection:
  # url: "neo4j+s://username:password@localhost:7687"
  
  # Optional database schema prefix (default: None)
  # schema: "my_app_schema"

# Optional table name mappings (defaults shown below)
# Customize these if your organization requires different table names
# Any omitted table will use its default name
# tables:
#   code_vault: "codevault"
#   tool_registry: "toolregistry"
#   resource_registry: "resourceregistry"
#   prompt_registry: "promptregistry"
#   sales_per_day: "sales_per_day"
